@model CadeMeuMedico.Models.Medicos

@{
    ViewBag.Title = "Adicionar";
}

<h5 id="titulo-formulario">Adicionar novo Médico</h5>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.CRM, htmlAttributes: new { @class = "control-label col-md-2" })
                    <i class="tiny material-icons">perm_identity</i>
                    @Html.EditorFor(model => model.CRM)
                    @Html.ValidationMessageFor(model => model.CRM, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    <i class="tiny material-icons">person_pin</i>
                    @Html.EditorFor(model => model.Nome)
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label col-md-2" })
                    <i class="tiny material-icons">location_on</i>
                    @Html.EditorFor(model => model.Endereco)
                    @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "red-text" })
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label col-md-2" })
                        <i class="tiny material-icons">location_on</i>
                        @Html.EditorFor(model => model.Bairro)
                        @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "red-text" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <i class="tiny material-icons">email</i>
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "red-text" })
                </div>
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.WebsiteBlog, htmlAttributes: new { @class = "control-label col-md-2" })
                    <i class="tiny material-icons">email</i>
                    @Html.EditorFor(model => model.WebsiteBlog)
                </div>
            </div>
            <div class="row col s6">
                <p>
                    <input type="checkbox" id="convenio" />
                    <label for="convenio">
                        @Html.LabelFor(model => model.AtendePorConvenio, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    @Html.EditorFor(model => model.AtendePorConvenio)
                </p>

                <p>
                    <input type="checkbox" id="clinica" />
                    <label for="clinica">
                        @Html.LabelFor(model => model.TemClinica, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    @Html.EditorFor(model => model.TemClinica)
                </p>
            </div>
            <div class="row col s12">
                <div class="input-field col s6">
                    <i class="tiny material-icons">location_on</i>                                        
                    @Html.DropDownList("IDCidade", String.Empty)
                    @Html.ValidationMessageFor(model => model.IDCidade, "", new { @class = "red-text" })
                    <label>Cidade</label>
                </div>
                <div class="input-field col s6">
                    <i class="tiny material-icons">assignment_ind</i>
                    @Html.DropDownList("IDEspecialidade", String.Empty)
                    @Html.ValidationMessageFor(model => model.IDEspecialidade, "", new { @class = "red-text" })
                    <label>Especialidade</label>
                </div>
            </div>
            <div class="input-field col s6">                
                <p>
                    <button class="btn waves-effect waves-light #4caf50 green" type="submit" name="action">
                        Salvar
                        <i class="material-icons right">send</i>
                    </button>                                        
                </p>
                <p>
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn waves-effect waves-light" })
                </p>
            </div>
        </form>
    </div>
}

